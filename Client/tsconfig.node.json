{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],  // Use ES2022 instead of ES2023 for compatibility
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // Uncomment only if no files should be generated

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true
  },
  "include": ["vite.config.ts"]
}
